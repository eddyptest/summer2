extends layout
block content
        .container
            .main-content.row
                .col-md-4.col-md-offset-4
                    form(action='/login', method='post')
                        .form-group
                            label Username:
                            input.form-control(type='text', name='username')
                            label Password:
                            input.form-control(type='password', name='password')
                            input.btn.btn-primary(type='submit', value='Log In')